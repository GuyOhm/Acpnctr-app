<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <TextView
            android:id="@+id/tv_sessions_list_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:layout_weight="1"
            android:paddingTop="8dp"
            android:textAppearance="?android:textAppearanceMedium"
            tools:text="13 novembre 2017" />

        <RatingBar
            android:id="@+id/rb_session_rating"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:isIndicator="false" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_sessions_list_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingLeft="8dp"
        android:singleLine="true"
        tools:text="Objectif: tendinite coude gauche" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:singleLine="true"
        tools:text="Traitement: 5TR, 10TR, 8TR, 4GI, 34VB, 3F " />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dadada"
        android:paddingLeft="8dp" />

</LinearLayout>